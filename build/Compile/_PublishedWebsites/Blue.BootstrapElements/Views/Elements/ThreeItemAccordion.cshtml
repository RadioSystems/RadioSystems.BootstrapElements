@using Blue.BootstrapElements.Elements
@{
    var element = (ThreeItemAccordion) Model.Element;
}
<div class="panel-group" id="@string.Format("{0}-accordion", element.HtmlId)" role="tablist" aria-multiselectable="true" style="@element.HtmlStyle">
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="@string.Format("{0}-heading-one", element.HtmlId)">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse"
                   onclick="toggleArrow(event)"
                   data-parent="@string.Format("#{0}-accordion", element.HtmlId)"
                   href="@string.Format("#{0}-collapse-one", element.HtmlId)"
                   aria-expanded="true" 
                   aria-controls="collapseOne">
                    <i class="fa @element.ItemOneIcon"></i>
                        @element.ItemOneTitle
                    <i class="fa fa-caret-up" style="float: right;"></i>
                </a>
            </h4>
        </div>
        <div id="@string.Format("{0}-collapse-one", element.HtmlId)" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="@element.ItemOneTitle">
            <div class="panel-body">
                @Html.Raw(element.ItemOneBody)
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="@string.Format("{0}-heading-two", element.HtmlId)">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse"
                   onclick="toggleArrow(event)"
                   data-parent="@string.Format("#{0}-accordion", element.HtmlId)"
                   href="@string.Format("#{0}-collapse-two", element.HtmlId)" 
                   aria-expanded="true" aria-controls="collapseOne">
                    <i class="fa @element.ItemTwoIcon"></i>
                        @element.ItemTwoTitle
                    <i class="fa fa-caret-down" style="float: right; z-index: -1"></i>
                </a>
            </h4>
        </div>
        <div id="@string.Format("{0}-collapse-two", element.HtmlId)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@element.ItemTwoTitle">
            <div class="panel-body">
                @Html.Raw(element.ItemTwoBody)
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="@string.Format("{0}-heading-three", element.HtmlId)">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse"
                   onclick="toggleArrow(event)"
                   data-parent="@string.Format("#{0}-accordion", element.HtmlId)"
                   href="@string.Format("#{0}-collapse-three", element.HtmlId)"
                   aria-expanded="true" 
                   aria-controls="collapseOne">
                    <i class="fa @element.ItemThreeIcon"></i>
                    @element.ItemThreeTitle
                    <i class="fa fa-caret-down" style="float: right;"></i>
                </a>
            </h4>
        </div>
        <div id="@string.Format("{0}-collapse-three", element.HtmlId)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="@element.ItemThreeTitle">
            <div class="panel-body">
                @Html.Raw(element.ItemThreeBody)
            </div>
        </div>
    </div>
</div>